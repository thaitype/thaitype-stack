{
  "name": "pages-stack",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:web": "vite build",
    "build:func": "esbuild server/main.ts --bundle --platform=node --external:@azure/functions-core --outfile=functions/dist/main.js",
    "dev": "run-p -l 'dev:*'",
    "dev:vite": "vite",
    "dev:func": "func start -w --prefix functions --cors-credentials",
    "dev:build": "run-s build:func -- --watch",
    "deploy": "swa deploy"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.25.4",
    "npm-run-all2": "^8.0.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@azure/functions": "^4.7.2",
    "@azure/static-web-apps-cli": "^2.0.1",
    "@hono/zod-validator": "^0.2.1",
    "@marplex/hono-azurefunc-adapter": "^1.0.1",
    "hono": "^4.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  }
}